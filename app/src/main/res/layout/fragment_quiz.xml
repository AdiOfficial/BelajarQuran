<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brownQuiz">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/quiz_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/greenQuiz"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/jawaban_a"
            android:layout_width="158dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/jawaban_b"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableStart="@drawable/jawaban_a"
            android:padding="10dp"
            android:text="@string/temp"
            android:textSize="@dimen/quizTextSize"
            app:layout_constraintBottom_toTopOf="@id/jawaban_c"
            app:layout_constraintEnd_toStartOf="@id/jawaban_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quiz_image"
            app:layout_constraintVertical_chainStyle="packed" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/jawaban_b"
            android:layout_width="158dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/jawaban_d"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:drawableStart="@drawable/jawaban_b"
            android:padding="10dp"
            android:text="@string/temp"
            android:textSize="@dimen/quizTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/jawaban_a"
            app:layout_constraintTop_toTopOf="@id/jawaban_a" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/jawaban_c"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:drawableStart="@drawable/jawaban_c"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="@string/temp"
            android:textSize="@dimen/quizTextSize"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/jawaban_d"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jawaban_a" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/jawaban_d"
            android:layout_width="158dp"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:drawableStart="@drawable/jawaban_d"
            android:padding="10dp"
            android:text="@string/temp"
            android:textSize="@dimen/quizTextSize"
            app:layout_constraintBottom_toBottomOf="@+id/jawaban_c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/jawaban_c"
            app:layout_constraintTop_toTopOf="@+id/jawaban_c"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>